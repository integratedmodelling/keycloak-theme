.kh-link-container
  padding 0 10px
.kh-link
  display inline-block
  text-decoration none
  color #0277bd
  cursor pointer
  font-weight normal
  .q-focus-helper
    display none
  &:visited
    color cyan-9
  &:not(.disabled):hover::after
      width: 100%;
  &.disabled
    cursor default !important
  i
    display inline-block
    margin-right 2px
  img
    width 14px
    display inline-block
    margin-right 4px
    vertical-align text-bottom
  &::after
    content ''
    display block
    width 0
    border-bottom-width 1px
    border-bottom-style solid
    transition width .3s
// administration common styles
.kh-banner-link
  text-decoration: none;
  border-bottom: 1px dotted currentColor;
  outline: 0;
  transition: color .28s ease-in-out;
.ka-table
  border 1px solid #eee
  margin-bottom 3em
  .ka-not-available
    text-align center
.ka-not-available
  color grey-6
  font-style italic
.ka-refresh
  opacity .3
  transition all .3s
  &:hover
    opacity 1
.ka-refreshing
  animation:spin 1s linear infinite;
.col
